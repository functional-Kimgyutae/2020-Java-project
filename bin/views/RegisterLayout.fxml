<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ddd;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.RegisterController">
   <children>
      <Pane layoutX="244.0" layoutY="122.0" prefHeight="356.0" prefWidth="313.0" style="-fx-background-color: #fff; -fx-border-radius: 4; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0);">
         <children>
            <Label layoutX="17.0" prefHeight="66.0" prefWidth="280.0" text="Sign up">
               <font>
                  <Font name="Webdings" size="34.0" />
               </font>
            </Label>
            <VBox layoutX="17.0" layoutY="77.0" prefHeight="205.0" prefWidth="280.0" spacing="17.0">
               <children>
                  <TextField fx:id="txtId" prefHeight="30.0" prefWidth="280.0" promptText="ID를 입력하세요" style="-fx-border-radius: 0; -fx-background-radius: 0;" />
                  <TextField fx:id="txtName" prefHeight="30.0" prefWidth="280.0" promptText="이름를 입력하세요" style="-fx-border-radius: 0; -fx-background-radius: 0;" />
                  <PasswordField fx:id="pass" prefHeight="30.0" prefWidth="279.0" promptText="Password를 입력하세요" style="-fx-background-radius: 0; -fx-border-radius: 0;" />
                  <PasswordField fx:id="passConfirm" prefHeight="30.0" prefWidth="279.0" promptText="Password 확인" style="-fx-background-radius: 0; -fx-border-radius: 0;" />
               </children>
            </VBox>
            <Button layoutX="17.0" layoutY="267.0" mnemonicParsing="false" onAction="#register" prefHeight="30.0" prefWidth="280.0" style="-fx-border-radius: 0; -fx-background-radius: 0; -fx-background-color: #0061ff;" text="가입하기" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button graphicTextGap="0.0" layoutX="16.0" layoutY="311.0" mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" prefWidth="279.0" style="-fx-background-radius: 0; -fx-border-radius: 0; -fx-background-color: #ffffff; -fx-border-color: #333333; -fx-border-width: 0.5px;" text="뒤로가기">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
